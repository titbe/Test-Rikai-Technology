
<h2><%= company ? "Edit" : "Create" %> Company</h2>

<form action="" method="post">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" name="name" value="<%= company ? company.name : '' %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Address</label>
    <input type="text" class="form-control" name="address" value="<%= company ? company.address : '' %>">
  </div>
  <button type="submit" class="btn btn-success">Save</button>
  <a href="/companies" class="btn btn-secondary">Back</a>
</form>
