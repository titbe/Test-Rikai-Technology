
<h1>Users</h1>

<a href="/users/create" class="btn btn-success mb-2">Create New User</a>

<form class="row mb-3">
  <div class="col-md-3">
    <select name="company_id" class="form-select" onchange="this.form.submit()">
      <option value="">All Companies</option>
      <% companies.forEach(c => { %>
        <option value="<%= c.id %>" <%= filter.company_id == c.id ? 'selected' : '' %>><%= c.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="col-md-4">
    <input type="text" name="search" value="<%= filter.search || '' %>" class="form-control" placeholder="Search by name">
  </div>
  <div class="col-md-2">
    <button class="btn btn-primary">Filter</button>
  </div>
</form>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Company</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(u => { %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.name %></td>
        <td><%= u.email %></td>
        <td><%= u.company_name %></td>
        <td><%= u.created_at_formatted %></td>
        <td>
          <a href="/users/edit/<%= u.id %>" class="btn btn-warning btn-sm">Edit</a>
          <form action="/users/delete/<%= u.id %>" method="post" style="display:inline;">
            <button class="btn btn-danger btn-sm" onclick="return confirm('Delete user?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
